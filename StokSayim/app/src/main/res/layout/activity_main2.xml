<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="212dp"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_weight="0.19" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_kontsay"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:text="Kontrollü Sayım"
        android:drawableLeft="@drawable/kontrol"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:background="#87CEFA" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_kontsuzsay"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:drawableLeft="@drawable/kontrol"
        android:textColor="#000000"
        android:text="Kontrolsüz SAyım"
        android:layout_marginTop="5dp"
        android:background="#87CEFA" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/btn_hakkimizda"
        android:drawableLeft="@drawable/hakkimizda"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:background="#87CEFA"
        android:text="Hakkında"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/btn_cks"
        android:drawableLeft="@drawable/cikis"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:background="#87CEFA"
        android:text="Çıkış"
        android:layout_marginTop="5dp" />

</LinearLayout>